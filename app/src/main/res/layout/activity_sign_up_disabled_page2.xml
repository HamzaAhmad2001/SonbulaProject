<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpDisabledPage2"
    tools:layout_editor_absoluteX="-5dp"
    tools:layout_editor_absoluteY="21dp">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo1" />


    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:contentDescription="Disability Type"
        android:text="Disability Type"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="Select your disability type that you need volunteers for."
        android:text="Select your disability type that you need volunteers for."
        android:textColor="#FF655E5E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Hint: Mobility and physical impariments, Deaf or Hard Hearing means issues with hearing your lecture, colleague..."
        android:text="Hint: Mobility and physical impairments, Deaf or Hard Hearing means issues with hearing your lecture, colleague..."
        android:textColor="#FF655E5E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="403dp"
        android:layout_height="220dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/chk_deaf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="Deaf or Hard Hearing"
                android:text="Deaf or Hard Hearing"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/chk_mobility"
                app:layout_constraintTop_toBottomOf="@+id/chk_mobility" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="37dp"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="136dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chk_vision"
                app:srcCompat="@drawable/vision" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="37dp"
                android:layout_height="38dp"
                android:layout_marginEnd="136dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chk_mobility"
                app:srcCompat="@drawable/reading" />


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="37dp"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="136dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chk_deaf"
                app:srcCompat="@drawable/deaf" />

            <CheckBox
                android:id="@+id/chk_vision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="Vision Impairments"
                android:text="Vision Impairments"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/chk_deaf"
                app:layout_constraintTop_toBottomOf="@+id/chk_deaf" />


            <Button
                android:id="@+id/btn_DetailsVision"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:layout_marginEnd="40dp"
                android:background="#47A8A8"
                android:contentDescription="details vision impairment"
                android:text="Details"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chk_vision" />

            <Button
                android:id="@+id/btn_DetailsDeaf"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:layout_marginEnd="40dp"
                android:background="#47A8A8"
                android:contentDescription="detils deaf or hard hearing"
                android:text="Details"
                android:textColor="#F8F8F8"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chk_deaf" />

            <Button
                android:id="@+id/btn_DetailsMobility"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:layout_marginEnd="40dp"
                android:background="#47A8A8"
                android:contentDescription="details mobility and physical impairments"
                android:text="Details"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chk_mobility" />


            <CheckBox
                android:id="@+id/chk_mobility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:contentDescription="Mobility and Physical Impairments"
                android:text="Mobility and Physical\nImpairments"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/chk_Paralyzed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:contentDescription="Paralyzed"
                android:text="Paralyzed"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/chk_vision"
                app:layout_constraintTop_toBottomOf="@+id/chk_vision" />

            <Button
                android:id="@+id/btn_DetailsMental"
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:layout_marginEnd="40dp"
                android:background="#47A8A8"
                android:contentDescription="Details Paralyzed"
                android:text="Details"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chk_Paralyzed" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="37dp"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="136dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chk_Paralyzed"
                app:srcCompat="@drawable/weel" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/signUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/color_raduis"
        android:contentDescription="Sign up"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonBackSignUpDisabledPage1"


        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="?attr/actionModeCloseDrawable"
        android:backgroundTint="#3884A7"
        android:contentDescription="back to sign up page"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUp" />

    <CheckBox
        android:id="@+id/chk_acceptHelpM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="184dp"
        android:contentDescription="Accept help from males"
        android:text="Accept help from males"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/chk_acceptHelpF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Accept help from females"
        android:text="Accept help from females"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk_acceptHelpM" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toEndOf="@+id/chk_acceptHelpM"
        app:layout_constraintTop_toTopOf="@+id/chk_acceptHelpM"
        app:srcCompat="@drawable/male" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/chk_acceptHelpF"
        app:layout_constraintTop_toTopOf="@+id/chk_acceptHelpF"
        app:srcCompat="@drawable/female" />

</androidx.constraintlayout.widget.ConstraintLayout>
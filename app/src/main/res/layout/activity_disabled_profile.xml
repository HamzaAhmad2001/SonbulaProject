<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".disabled_profile">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="62dp"
        android:layout_height="60dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/montserrat"
        android:text="Full Name"
        android:textAlignment="viewStart"
        android:textColor="#070707"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/stud_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Student ID"
        android:textAlignment="viewStart"
        android:textColor="#070707"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/disability_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Disability Type"
        android:textColor="#070707"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="322dp" />

    <view
        android:id="@+id/dis_type_rec"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="319dp"
        android:layout_height="161dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/view1_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disability_type" />

    <TextView
        android:id="@+id/deaf"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Deaf or Hard Hearing"
        android:textColor="#0C0C0C"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/dis_type_rec"
        app:layout_constraintEnd_toEndOf="@+id/dis_type_rec"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="@+id/dis_type_rec"
        app:layout_constraintTop_toTopOf="@+id/dis_type_rec"
        app:layout_constraintVertical_bias="0.865" />

    <TextView
        android:id="@+id/physical"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/montserrat"
        android:text="Mobility and physical Impariments"
        android:textColor="#0C0C0C"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/dis_type_rec"
        app:layout_constraintEnd_toEndOf="@+id/dis_type_rec"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="@+id/dis_type_rec"
        app:layout_constraintTop_toTopOf="@+id/dis_type_rec"
        app:layout_constraintVertical_bias="0.527" />

    <TextView
        android:id="@+id/vision"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Vision Impariments"
        android:textColor="#0C0C0C"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/dis_type_rec"
        app:layout_constraintEnd_toEndOf="@+id/dis_type_rec"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="@+id/dis_type_rec"
        app:layout_constraintTop_toTopOf="@+id/dis_type_rec"
        app:layout_constraintVertical_bias="0.164" />


    <Button
        android:id="@+id/btn_edit"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginTop="256dp"
        android:onClick="onClick"
        android:background="@drawable/view1_design"
        android:drawableBottom="@drawable/view1_design"
        android:fontFamily="@font/montserrat"
        android:foreground="@drawable/view1_design"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="#070505"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/detailButton1"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/detail_buttons"
        android:drawableBottom="@drawable/detail_buttons"
        android:fontFamily="@font/montserrat"
        android:text="Details"
        android:textColor="#FFFFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/dis_type_rec"
        app:layout_constraintEnd_toEndOf="@+id/dis_type_rec"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/dis_type_rec"
        app:layout_constraintTop_toTopOf="@+id/dis_type_rec"
        app:layout_constraintVertical_bias="0.179" />

    <Button
        android:id="@+id/detailButton2"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/detail_buttons"
        android:drawableBottom="@drawable/detail_buttons"
        android:fontFamily="@font/montserrat"
        android:text="Details"
        android:textColor="#FFFFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/dis_type_rec"
        app:layout_constraintEnd_toEndOf="@+id/dis_type_rec"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/dis_type_rec"
        app:layout_constraintTop_toTopOf="@+id/dis_type_rec"
        app:layout_constraintVertical_bias="0.53" />

    <Button
        android:id="@+id/detailButton3"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/detail_buttons"
        android:drawableBottom="@drawable/detail_buttons"
        android:fontFamily="@font/montserrat"
        android:text="Details"
        android:textColor="#FFFFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/dis_type_rec"
        app:layout_constraintEnd_toEndOf="@+id/dis_type_rec"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/dis_type_rec"
        app:layout_constraintTop_toTopOf="@+id/dis_type_rec"
        app:layout_constraintVertical_bias="0.9" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="417dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:background="@color/white"
            app:srcCompat="@drawable/profile" />

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:background="@color/white"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/btn_archive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:background="@color/white"
            app:srcCompat="@drawable/downloads" />

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:background="@color/white"
            app:srcCompat="@drawable/settings" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>